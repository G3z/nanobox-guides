extends ../templates/base

mixin createArticles(title, articles, pageTitle)
  .title= title
  .articles
    each article in articles
      a(href="##{article.href}" class=pageTitle==article.title?"active":"")=article.title

block js
  block configParams

  script.
    article = new Article("#{title}", "#{articles}")
    $main = $('.main')
    nanobox.addBreadcrumb( $main )
    nanobox.addIcons( $main, "#{icons}" )


block content
  .article-page
    .left#left-nav
      .article-nav
        a.title
        .articles

    .main
      block custom
      //- Populated with any custom content
      
      .markdown 
        block markdown
        //- Populated with any markdown files
